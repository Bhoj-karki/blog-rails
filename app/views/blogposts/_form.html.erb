<%= form_with model: blogpost, url: blogposts_path, method: :post do |form| %>
    <div>
        <%= form.label :title %> <br>
        <%= form.text_field :title %>
        <% blogpost.errors.full_messages_for(:title).each do |message| %>
         <div><%= message %></div>
      <% end %>
    </div>

    <div>
        <%= form.label :body %> <br>
        <%= form.textarea :body %>
        <% blogpost.errors.full_messages_for(:body).each do |message| %>
          <div><%= message %></div>
         <% end %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end %>